<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vườn Thông Minh</title>
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    
</head>
<body>
  <h1 id="temp">Temp: <%= data.temp.value%>°C</h1>
  <h1 id="humi">Humi: <%= data.humiAir.value%>%</h1>
  <h1 id="light">Light: <%= data.light.value%>Lux</h1>
  <script src="socket.io/socket.io.js"></script>
  <script >
    const socket = io();
    
    const temp = document.getElementById('temp');
    const humi = document.getElementById('humi');
    const light = document.getElementById('light');

    socket.on('temp data', (msg) => {
      temp.innerHTML = `Temp: ${msg}°C`;
    })

    socket.on('humi data', (msg) => {
      humi.innerHTML = `Humi: ${msg}%`;
    })

    socket.on('light data', (msg) => {
      light.innerHTML = `Light: ${msg}Lux`;
    })

  </script>
</body>
</html>